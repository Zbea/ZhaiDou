<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/common_actionbar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_height="@dimen/header_height_dimen">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_back_selector"/>
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:textColor="@color/green_color"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:text="返回"/>
        </LinearLayout>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_title"
            android:textColor="@color/text_main_color"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_login"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_below="@id/common_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_pressed"/>

        <EditText
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_dimen"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/cancel"
            android:paddingRight="10dp"
            android:drawableBottom="@color/line_color"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_main_color"
            android:textColorHint="@color/text_gary_color"
            android:hint="手机/邮箱"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heart_pressed"/>
        <EditText
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_dimen"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:singleLine="true"
            android:drawableRight="@drawable/cancel"
            android:paddingRight="10dp"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
           android:textColor="@color/text_main_color"
            android:textColorHint="@color/text_gary_color"
            android:hint="密码"/>
    </LinearLayout>


    </LinearLayout>
    <com.zhaidou.view.TypeFaceTextView
        android:layout_below="@id/ll_login"
        android:id="@+id/bt_login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height_dimen"
        android:text="登录"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/btn_green_click_bg"/>
    <LinearLayout
        android:layout_below="@id/bt_login"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/green_color"
            android:paddingRight="15dp"
            android:text="新用户注册"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/green_color"></View>

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_reset_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/green_color"
            android:layout_gravity="center"
            android:text="忘记密码？"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <LinearLayout
            android:id="@+id/ll_taobao"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_taobao"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_weixin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_weixin"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_qq"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_weibo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_weibo"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#d2d4d7"
            android:layout_weight="1"/>
        <com.zhaidou.view.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#cacaca"
            android:text="第三方登录"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#d2d4d7"/>
    </LinearLayout>
</RelativeLayout>
