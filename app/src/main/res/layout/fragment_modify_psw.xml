<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6">

    <include
        android:id="@+id/headLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/head_style_page"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height_dimen"
        android:background="@drawable/item_click_selector"
        android:layout_marginTop="10dp">

        <com.zhaidou.view.TypeFaceTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="登录密码"
            android:textColor="@color/text_main_color" />
        <com.zhaidou.view.TypeFaceEditText
            android:id="@+id/current"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:hint="填写当前登录密码"
            android:background="@color/white"
            android:textColorHint="@color/text_gary_color"
            android:inputType="textPassword"
            android:textSize="14sp"/>
    </LinearLayout>
    <com.zhaidou.view.TypeFaceTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height_dimen"
        android:text="请重新设置新密码"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:textColor="@color/text_gary_color"
        android:paddingBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_height_dimen"
            android:orientation="horizontal">
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="新密码"
                android:textColor="@color/text_normal_color"
                android:gravity="center_vertical"
                android:padding="10dp"/>
            <com.zhaidou.view.TypeFaceEditText
                android:id="@+id/newPsw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:textColorHint="@color/text_gary_color"
                android:background="@color/white"
                android:hint="6-16位字母、数字组合"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:textSize="14sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="10dp"
            android:src="@color/page_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_height_dimen"
            android:orientation="horizontal">
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确认密码"
                android:textColor="@color/text_normal_color"
                android:gravity="center_vertical"
                android:padding="10dp"/>
            <com.zhaidou.view.TypeFaceEditText
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="再次填写密码"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textColorHint="@color/text_gary_color"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <com.zhaidou.view.TypeFaceTextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height_dimen"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_red_click_selector"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
