<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_part_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recommendImage"
            android:layout_width="@dimen/account_image_width_dimen"
            android:layout_height="@dimen/account_image_width_dimen"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/icon_loading_defalut"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:paddingTop="10dp">

            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/recommendTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="@dimen/account_text_txt"
                android:textColor="@color/text_main_color"
                android:text="APP名称"/>

            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/recommendInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/account_text_info_txt"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_gary_color"
                android:text="APP名称"/>


            </LinearLayout>

        </LinearLayout>

</LinearLayout>
