<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/page_bg">

    <include
        android:id="@+id/headLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/head_style_page"></include>

    <com.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:id="@+id/fallLine1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/fallLine2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"></LinearLayout>

            </LinearLayout>
            <!--<com.zhaidou.view.flow.StaggeredGridView-->
                <!--android:id="@+id/grid"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--app:column_count_landscape="2"-->
                <!--android:visibility="gone"-->
                <!--app:item_margin="10dp"-->
                <!--></com.zhaidou.view.flow.StaggeredGridView>-->


    </com.pulltorefresh.PullToRefreshScrollView>

</LinearLayout>
