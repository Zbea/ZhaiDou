<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/page_bg">

    <RelativeLayout
        android:id="@+id/common_actionbar"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/green_color"
        android:layout_height="@dimen/header_height_dimen">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_back_selector"/>

            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:drawablePadding="2dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="返回"/>
        </LinearLayout>

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="我的标题"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            />
    </RelativeLayout>

    <com.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_color"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:id="@+id/fallLine1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/fallLine2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:orientation="vertical"></LinearLayout>

            </LinearLayout>
            <!--<com.zhaidou.view.flow.StaggeredGridView-->
                <!--android:id="@+id/grid"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--app:column_count_landscape="2"-->
                <!--android:visibility="gone"-->
                <!--app:item_margin="10dp"-->
                <!--></com.zhaidou.view.flow.StaggeredGridView>-->


    </com.pulltorefresh.PullToRefreshScrollView>

</LinearLayout>
