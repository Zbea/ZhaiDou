<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_layout">
    <RelativeLayout
        android:id="@+id/home_actionbar"
        android:layout_width="match_parent"
        android:background="@color/actionbar_background_color"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/ll_back"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_back"/>
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:drawablePadding="2dp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text="返回"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_category_view"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@color/transparent"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_category"/>
        </LinearLayout>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="每日精选功能美物"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
        </RelativeLayout>

    <!--<com.zhaidou.view.SwipeRefreshLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_below="@id/common_actionbar"-->
        <!--android:id="@+id/refresh_layout">-->
    <com.pulltorefresh.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_below="@id/home_actionbar"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        ptr:ptrHeaderTextColor="@color/gray_9">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_adview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fl_images_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.zhaidou.view.ImageSwitchWall
                    android:id="@+id/isw_imagewall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </com.zhaidou.view.ImageSwitchWall>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_sale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_special_sale"/>
                    <com.zhaidou.view.TypeFaceTextView
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="零元特卖"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_lottery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_guajiang"/>
                    <com.zhaidou.view.TypeFaceTextView
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="天天刮奖"/>
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_forward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_zhuanfa"/>
                    <com.zhaidou.view.TypeFaceTextView
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="转发有喜"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_competition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_pintie"/>
                    <com.zhaidou.view.TypeFaceTextView
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="拼贴大赛"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <com.zhaidou.view.ListViewForScrollView
                android:id="@+id/homeItemList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbars="none"
                android:listSelector="@android:color/transparent"
                android:background="@color/black"
                android:dividerHeight="0dp">
            </com.zhaidou.view.ListViewForScrollView>
        </LinearLayout>
    </com.pulltorefresh.PullToRefreshScrollView>
    <!--</com.zhaidou.view.SwipeRefreshLayout>-->
    <FrameLayout
        android:id="@+id/fl_category_menu"
        android:layout_below="@id/home_actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#86222222"/>
</RelativeLayout>