<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_layout">

    <RelativeLayout
        android:id="@+id/home_actionbar"
        android:layout_width="match_parent"
        android:background="@color/actionbar_background_color"
        android:layout_height="50dp">


        <LinearLayout
            android:id="@+id/ll_category_view"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_category"/>
        </LinearLayout>

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="家居生活新时尚"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <com.pulltorefresh.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_below="@id/home_actionbar"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        ptr:ptrHeaderTextColor="@color/gray_9">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_adview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/home_adv_pager"
                        android:layout_width="fill_parent"
                        android:layout_height="152dp">
                    </android.support.v4.view.ViewPager>

                    <LinearLayout
                        android:id="@+id/home_viewGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_sale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_special_sale"/>

                        <com.zhaidou.view.TypeFaceTextView
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="零元特卖"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_lottery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_guajiang"/>

                        <com.zhaidou.view.TypeFaceTextView
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="天天刮奖"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_forward"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_zhuanfa"/>

                        <com.zhaidou.view.TypeFaceTextView
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="转发有喜"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_competition"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_pintie"/>

                        <com.zhaidou.view.TypeFaceTextView
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="拼贴大赛"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:id="@+id/home_item_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/homeGoodsImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_item_dimen"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_loading_item"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:padding="10dp">

                    <com.zhaidou.view.TypeFaceTextView
                        android:id="@+id/homeGoodsSale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:layout_weight="0.000001"
                        android:textSize="18sp"
                        android:text="3折起"
                        />

                    <com.zhaidou.view.TypeFaceTextView
                        android:id="@+id/homeGoodsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/text_main_color"
                        android:text="item的名称"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.000001"
                        android:gravity="center_vertical">

                        <com.zhaidou.view.TypeFaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gary_color"
                            android:textSize="13sp"
                            android:text="剩余时间"
                            />

                        <com.zhaidou.view.TypeFaceTextView
                            android:id="@+id/shop_time_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/text_gary_color"
                            android:text="1"
                            />

                        <com.zhaidou.view.TypeFaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gary_color"
                            android:textSize="13sp"
                            android:text="天"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.zhaidou.view.ListViewForScrollView
                android:id="@+id/homeItemList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbars="none"
                android:listSelector="@android:color/transparent"
                android:background="@color/black"
                android:layout_marginBottom="@dimen/default_margin"
                android:dividerHeight="0dp"></com.zhaidou.view.ListViewForScrollView>
        </LinearLayout>
    </com.pulltorefresh.PullToRefreshScrollView>

    <FrameLayout
        android:id="@+id/fl_category_menu"
        android:layout_below="@id/home_actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#86222222"/>
</RelativeLayout>