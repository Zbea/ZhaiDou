<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="260dp"
              android:layout_height="320dp"
              android:background="@drawable/custom_loading_dialog_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="320dp">

    <LinearLayout
        android:id="@+id/updateManagerLine"
        android:layout_width="260dp"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dialog_version_update_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.00001"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gary_color"
                    android:text="宅豆家居"/>

                <TextView
                    android:id="@+id/update_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gary_color"
                    android:text="V2.2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gary_color"
                    android:text="版本更新啦"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_gary_color"
                android:text="亲爱的小主,赶快更新吧~~"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_green_click_bg"
                android:text="以后再说"/>


            <TextView
                android:id="@+id/download_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_red_click_selector"
                android:text="在线更新"/>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/updateProgressLine"
        android:layout_width="260dp"
        android:layout_height="320dp"
        android:visibility="gone"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/update_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textSize="20sp"
                android:text="/"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/update_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>

        </LinearLayout>

        <com.zhaidou.view.CircleProgressBar
            android:id="@+id/progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/update_ratio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="45%"
                android:textSize="14sp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/cancels_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/gray"
                android:text="取消更新"/>


        </LinearLayout>



    </RelativeLayout>
    </RelativeLayout>



</LinearLayout>