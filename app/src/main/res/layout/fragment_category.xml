                        android:weightSum="1.0">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_weight="0.2"
                            android:onClick="onClick_Event"
                            android:tag="016"
                            android:background="@drawable/keting" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
