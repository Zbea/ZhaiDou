<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_single_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:id="@+id/iv_single_item"
                android:background="@drawable/icon_loading_defalut"/>
            <ImageView
                android:id="@+id/ll_sale_out"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/icon_sale_out"
                android:layout_height="match_parent">
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="7dp"
            android:paddingBottom="5dp">

            <com.zhaidou.view.TypeFaceTextView
                android:background="@drawable/main_magic_goods_shape"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_num"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:text="1"/>

            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_name"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="      天然环保彩色椅啊斯哈哈哈哈啊哈哈哈哈啊哈哈啊哈哈啊哈哈啊哈啊哈安徽啊哈和"/>
            </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="7dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:textColor="@color/red"
                android:text="￥0"
                android:textSize="16sp"
                android:id="@+id/tv_money"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/text_gary_color"
                    android:text="￥88元"/>
            </FrameLayout>

        </LinearLayout>
        <com.zhaidou.view.TypeFaceTextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="3.8折"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_click_bg"
            android:id="@+id/shopSaleTv"/>
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>