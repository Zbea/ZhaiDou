<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/white"
   android:orientation="vertical">
    <!--android:background="@drawable/content_part_bg"-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="35dp"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:paddingLeft="10dp">

               <com.zhaidou.view.TypeFaceTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="订单时间:"
                   android:textColor="@color/text_main_color"
                   android:textSize="15sp" />

               <com.zhaidou.view.TypeFaceTextView
                   android:id="@+id/tv_order_time"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:gravity="center_vertical"
                   android:text="2015-07-03"
                   android:textColor="@color/text_main_color"
                   android:textSize="15dp" />
           </LinearLayout>

           <ImageView
               android:id="@+id/iv_delete"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="15dp"
               android:clickable="true"
               android:scaleType="centerInside"
               android:src="@drawable/delete" />
       </RelativeLayout>

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/black" />
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:orientation="horizontal"
       android:paddingBottom="10dp"
       android:paddingLeft="10dp"
       android:paddingTop="10dp">

       <ImageView
           android:id="@+id/iv_order_img"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@drawable/icon_loading_defalut" />

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center_vertical"
           android:orientation="vertical"
           android:paddingLeft="10dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <com.zhaidou.view.TypeFaceTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="订单编号:"
                   android:textColor="@color/text_main_color"
                   android:textSize="14sp" />

               <com.zhaidou.view.TypeFaceTextView
                   android:id="@+id/tv_order_number"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:text="12345678"
                   android:textColor="@color/text_normal_color"
                   android:textSize="14sp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="7dp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <com.zhaidou.view.TypeFaceTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="订单金额:"
                   android:textColor="@color/text_main_color"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/tv_order_amount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:text="￥432"
                   android:textColor="@color/red"
                   android:textSize="15sp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="7dp"
               android:gravity="center_vertical"
               android:orientation="horizontal">

               <com.zhaidou.view.TypeFaceTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="订单状态:"
                   android:textColor="@color/text_main_color"
                   android:textSize="14sp" />

               <com.zhaidou.view.TypeFaceTextView
                   android:id="@+id/tv_order_status"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:text="订单已取消"
                   android:textColor="@color/text_normal_color"
                   android:textSize="14sp" />
           </LinearLayout>

       </LinearLayout>

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:paddingRight="20dp"
           android:src="@drawable/icon_arrow_right" />
   </LinearLayout>
    <LinearLayout
        android:id="@+id/remarkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/page_bg" />
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/remark"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/text_gary_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
   <RelativeLayout
       android:id="@+id/rl_btn"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:gravity="right"
       android:visibility="visible">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:layout_alignParentTop="true"
           android:background="@color/page_bg" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="right">


           <com.zhaidou.view.TypeFaceTextView
               android:id="@+id/bt_received"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="10dp"
               android:layout_marginTop="2dp"
               android:background="@drawable/btn_red_click_selector"
               android:gravity="center"
               android:paddingBottom="5dp"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:paddingTop="5dp"
               android:text="确认收货"
               android:textColor="@color/white"
               android:textSize="13sp"/>

           <com.zhaidou.view.TypeFaceTextView
               android:id="@+id/bt_logistics"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginRight="10dp"
               android:layout_marginTop="2dp"
               android:layout_toLeftOf="@id/bt_received"
               android:background="@drawable/btn_green_click_bg"
               android:gravity="center"
               android:paddingBottom="5dp"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:paddingTop="5dp"
               android:text="申请退款"
               android:textColor="@color/white"
               android:textSize="13sp" />
       </RelativeLayout>
   </RelativeLayout>
</LinearLayout>