<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/goodsImageTv"
            android:layout_weight="0.00001"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_loading_defalut"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <com.zhaidou.view.TypeFaceTextView
                        android:id="@+id/goodsNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_main_color"
                        android:layout_marginTop="2dp"
                        android:text="商品价格名称哈哈啊哈哈dsfsdfsdfsfdsdfsdfsfds"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.zhaidou.view.TypeFaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/text_gary_color"
                            android:text="规格："
                            android:visibility="gone"
                            />

                        <com.zhaidou.view.TypeFaceTextView
                            android:id="@+id/goodsSizeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textColor="@color/text_gary_color"
                            android:text="黄色/L"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_weight="0.00001"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    >

                    <TextView
                        android:id="@+id/goodsPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:text="$123.5"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:id="@+id/goodsNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textSize="13sp"
                        android:textColor="@color/text_gary_color"
                        android:text="X 2"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.00001"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp">

                <com.zhaidou.view.TypeFaceTextView
                    android:id="@+id/goodsTypeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:textColor="@color/green_color"
                    android:text="宅豆"/>

                <com.zhaidou.view.TypeFaceTextView
                    android:id="@+id/goodsBuyTv"
                    android:layout_width="60dp"
                    android:layout_height="18sp"
                    android:layout_weight="0.000001"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/btn_article_buy_selector"
                    android:text="去购买"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/orderItemLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"></ImageView>

</LinearLayout>