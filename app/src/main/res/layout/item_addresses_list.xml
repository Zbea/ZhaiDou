<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_addr_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="#666666" />

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_addr_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <com.zhaidou.view.TypeFaceTextView
        android:id="@+id/tv_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textColor="#666666" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:src="#EEEEEE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp">

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_defalue_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/selector_address_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="默认地址"
            android:textColor="#666666"/>

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/delete"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="删除"
            android:textColor="#666666" />

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_delete"
            android:drawableLeft="@drawable/icon_edit"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="编辑"
            android:textColor="#666666" />
    </RelativeLayout>
</LinearLayout>