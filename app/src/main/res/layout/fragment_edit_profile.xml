<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg">
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_dimen"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_back_selector"/>
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:drawablePadding="2dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:text=""/>
        </LinearLayout>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/text_main_color"
            android:text="个人昵称"/>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_main_color"
            android:text="完成"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_input_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <com.zhaidou.view.TypeFaceEditText
            android:id="@+id/tv_edit_msg"
            android:layout_width="0dp"
            android:paddingLeft="20dp"
            android:layout_height="match_parent"
            android:textColor="#666666"
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="20dp"
            android:src="@drawable/icon_cancel"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_description"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/white">
        <com.zhaidou.view.TypeFaceEditText
            android:id="@+id/tv_description"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#666666"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:maxLength="75"
            android:background="@null"
            android:gravity="top"
            android:textSize="16sp"/>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_length"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:text="75"
            android:textColor="#666666"
            android:paddingRight="10dp"
            android:background="@color/white"/>
    </RelativeLayout>

</LinearLayout>
