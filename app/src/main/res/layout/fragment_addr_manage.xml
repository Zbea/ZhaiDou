    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_addr_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textColor="#666666"
            android:text="Scoield"/>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_addr_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="185*****123"/>
    </LinearLayout>
    <com.zhaidou.view.TypeFaceTextView
        android:id="@+id/tv_addr"
        android:background="@color/white"
        android:textColor="#666666"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="广东省,深圳市,福田区,卓越世纪中心,3栋B座1518室"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#EEEEEE"
            android:background="@color/white"
            android:paddingLeft="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <com.zhaidou.view.TypeFaceTextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:drawableLeft="@drawable/icon_addr_checked"
            android:drawablePadding="5dp"
            android:text="默认地址"/>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#666666"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/delete"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"/>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="#666666"
            android:paddingRight="10dp"
            android:drawablePadding="5dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/icon_edit"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/tv_delete"/>
    </RelativeLayout>
