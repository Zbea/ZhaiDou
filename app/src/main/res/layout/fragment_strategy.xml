<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/living_room"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/strategy_top_button_background"
            android:tag="1"
            android:textColor="@drawable/strategy_top_button_color"
            android:text="客厅方案" />

        <Button
            android:id="@+id/entire_part"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/strategy_top_button_background"
            android:tag="2"
            android:textColor="@drawable/strategy_top_button_color"
            android:text="整体方案" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<WebView-->
            <!--android:id="@+id/strategyView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!-->-->

        <!--</WebView>-->

        <android.support.v4.view.ViewPager android:id="@+id/strategy_pager" android:layout_width="match_parent" android:layout_height="match_parent">



        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>
