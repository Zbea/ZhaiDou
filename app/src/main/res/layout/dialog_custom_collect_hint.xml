<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="@dimen/dialog_width_dimen"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_loading_dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:gravity="center">

            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="是否确认取消收藏?"
                android:layout_margin="18dp"
                android:textColor="@color/text_gary_color"
                android:gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="35dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:clickable="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/cancelTv"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_green_click_bg"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@color/white"
                android:text="确定"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_red_click_selector"
                android:id="@+id/okTv"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
