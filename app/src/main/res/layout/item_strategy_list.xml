<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fragment_strategy"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_item_dimen"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <View
        android:id="@+id/lineTo"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_dimen"
        android:src="@drawable/icon_loading_item"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/icon_item_shadow"
        android:layout_alignParentBottom="true">

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="好看的花啊！"
            android:gravity="bottom"
            android:singleLine="true"
            android:textSize="18sp"
            android:paddingBottom="6dp"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_views_bg"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/icon_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:src="@drawable/icon_eye"/>
        <TextView
            android:id="@+id/views"
            android:text="123"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/dark_color_for_text"
            android:textSize="11dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/home_tips_dimen"
        android:layout_height="@dimen/home_tips_dimen"
        android:id="@+id/newsView"
        android:visibility="gone"
        android:src="@drawable/icon_good_news_icon"/>
    </RelativeLayout>

</LinearLayout>