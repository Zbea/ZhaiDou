<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhaidou.activities.StrategyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/living_room"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/strategy_top_button_background"
            android:onClick="onClick_Event"
            android:tag="1"
            android:textColor="@drawable/strategy_top_button_color"
            android:text="客厅方案" />

        <Button
            android:id="@+id/entire_part"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/strategy_top_button_background"
            android:onClick="onClick_Event"
            android:tag="2"
            android:textColor="@drawable/strategy_top_button_color"
            android:text="整体方案" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <WebView
            android:id="@+id/strategyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </WebView>
    </LinearLayout>

</LinearLayout>
