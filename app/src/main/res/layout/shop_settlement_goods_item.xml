<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/orderImageItemTv"
            android:layout_weight="0.00001"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_loading_defalut"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/orderItemNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/text_main_color"
                android:text="商品价格名称哈哈啊哈哈"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"/>

            <LinearLayout
                android:id="@+id/cartIntoduceItemLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.zhaidou.view.TypeFaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_gary_color"
                        android:text="规格："
                        />
                    <com.zhaidou.view.TypeFaceTextView
                        android:id="@+id/orderItemSizeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:textColor="@color/text_gary_color"
                        android:text="黄色/L"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zhaidou.view.TypeFaceTextView
                    android:id="@+id/cartItemSubBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gary_color"
                    android:text="数量："/>
                <com.zhaidou.view.TypeFaceTextView
                    android:id="@+id/orderItemNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:textColor="@color/text_main_color"
                    android:text="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.00001"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            >

            <TextView
                android:id="@+id/orderItemCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="16sp"
                android:textColor="@color/red"
                android:text="$123.5"
                />

            <TextView
                android:id="@+id/orderItemFormalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textSize="13sp"
                android:textColor="@color/text_gary_color"
                android:text="$ 123.5"
                />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/orderItemLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"></ImageView>

</LinearLayout>