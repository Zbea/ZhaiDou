<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_unreceive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_part_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <com.zhaidou.view.TypeFaceTextView
                android:textColor="@color/text_main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="订单时间:"/>
            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/tv_unreceive_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:textColor="@color/text_main_color"
                android:text="2015-07-03"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_order_img"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:src="@drawable/icon_loading_defalut"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.zhaidou.view.TypeFaceTextView
                    android:textColor="@color/text_main_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="订单编号:"/>
                <com.zhaidou.view.TypeFaceTextView
                    android:id="@+id/tv_order_number"
                    android:textColor="@color/text_gary_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="12345678"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <com.zhaidou.view.TypeFaceTextView
                    android:textColor="@color/text_main_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="订单金额:"/>
                <com.zhaidou.view.TypeFaceTextView
                    android:id="@+id/tv_order_amount"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="￥432"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.zhaidou.view.TypeFaceTextView
                    android:textColor="@color/text_main_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="订单状态:"/>
                <com.zhaidou.view.TypeFaceTextView
                    android:id="@+id/tv_order_status"
                    android:textColor="@color/text_gary_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="订单已取消"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/page_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="right">
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/bt_received"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/btn_red_click_selector"
            android:gravity="center"
            android:paddingTop="6dp"
            android:layout_marginTop="2dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingBottom="6dp"
            android:layout_marginRight="10dp"
            android:text="确认收货"/>
        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/bt_logistics"
            android:layout_toLeftOf="@id/bt_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/btn_green_click_bg"
            android:gravity="center"
            android:paddingTop="6dp"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:text="查看物流"/>
    </RelativeLayout>
</LinearLayout>