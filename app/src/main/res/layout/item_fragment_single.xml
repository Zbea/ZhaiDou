<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_single_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_single_item"
        android:background="@drawable/icon_loading_defalut"/>
    <com.zhaidou.view.TypeFaceTextView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16sp"
        android:id="@+id/tv_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#333333"
        android:paddingLeft="15dp"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:id="@+id/tv_money"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_collect_heart"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_heart"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/heart_icon_selector"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"/>
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:id="@+id/tv_count"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>