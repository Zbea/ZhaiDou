<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_single_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_single_item"
        android:background="@drawable/icon_loading_defalut"/>
    <com.zhaidou.view.TypeFaceTextView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="8dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        android:id="@+id/tv_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/text_main_color"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">
        <com.zhaidou.view.TypeFaceTextView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_weight="0.00001"
            android:textColor="#ff6262"
            android:id="@+id/tv_money"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.00001"
            android:src="@drawable/icon_search_taobao"/>

        <LinearLayout
            android:id="@+id/ll_collect_heart"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_heart"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/heart_icon_selector"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"/>
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:id="@+id/tv_count"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D2D2D2"/>
</LinearLayout>