<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/page_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/common_actionbar"
        android:layout_width="match_parent"
        android:background="@color/actionbar_background_color"
        android:layout_height="@dimen/header_height_dimen">

        <com.zhaidou.view.TypeFaceTextView
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_beauty"/>
    </RelativeLayout>

    <com.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/sv_scrollview"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_height="80dp">

            <LinearLayout
                android:id="@+id/strategy_design"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/btn_click_selector"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_strategy_design"/>

                <com.zhaidou.view.TypeFaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_main_color"
                    android:text="委托设计"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/strategy_dd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/btn_click_selector"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_strategy_dd"/>

                <com.zhaidou.view.TypeFaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_main_color"
                    android:text="DIY豆搭"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="@color/white">

            <TextView
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/green_color"/>

            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:textSize="15sp"
                android:textColor="@color/text_main_color"
                android:text="软装方案"/>
        </LinearLayout>

        <com.zhaidou.view.ListViewForScrollView
            android:id="@+id/homeItemList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="false"
            android:divider="@null"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent"
            android:dividerHeight="0dp"/>
     </LinearLayout>
    </com.pulltorefresh.PullToRefreshScrollView>
    </LinearLayout>
