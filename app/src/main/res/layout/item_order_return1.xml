<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp">

        <CheckBox
            android:id="@+id/cb_return"
            style="@style/CustomCheckboxTheme"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_order_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_loading_defalut" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:id="@+id/rl_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <com.zhaidou.view.TypeFaceTextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:gravity="left"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:text="女款连衣裙"
                            android:textColor="@color/text_main_color"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/orderItemCurrentPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right|center"
                            android:layout_marginTop="3dp"
                            android:text="￥123.5"
                            android:textColor="@color/red"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_name"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.zhaidou.view.TypeFaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:text="规格:"
                                android:textColor="@color/text_gary_color"
                                android:textSize="13sp"
                                android:visibility="gone" />

                            <com.zhaidou.view.TypeFaceTextView
                                android:id="@+id/tv_specification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:text="L"
                                android:textColor="@color/text_gary_color"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/orderItemFormalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:text="￥123.5"
                            android:textColor="@color/text_gary_color"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.zhaidou.view.TypeFaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="数量:"
                                android:textColor="@color/gray_9" />

                            <com.zhaidou.view.TypeFaceTextView
                                android:id="@+id/tv_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray_9" />
                        </LinearLayout>

                        <com.zhaidou.view.TypeFaceTextView
                            android:id="@+id/tv_zero_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/c00bbb9"
                            android:padding="5dp"
                            android:text="@string/order_zero_return_msg"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="48dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/icon_deli" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/couponMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="5dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="#666666"
                android:text="优惠:"
                android:paddingRight="8dp"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/couponMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="$0.0"/>
            <com.zhaidou.view.TypeFaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:drawablePadding="5dp"
                android:gravity="right|center_vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="实付:"
                android:paddingRight="8dp"
                android:textColor="#666666"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.0"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/icon_deli" />
    </LinearLayout>


</LinearLayout>