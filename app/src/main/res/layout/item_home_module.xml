<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/page_bg"></View>

    <LinearLayout
        android:id="@+id/moduleLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/moduleIv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/icon_loading_item"/>

        <LinearLayout
            android:id="@+id/moduleLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/moduleIv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/icon_loading_special"/>

            <ImageView
                android:id="@+id/moduleIv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/icon_loading_special"/>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/moduleLine2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/moduleIv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/icon_loading_special"/>

            <ImageView
                android:id="@+id/moduleIv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/icon_loading_special"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>