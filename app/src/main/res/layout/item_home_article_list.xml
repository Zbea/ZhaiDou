<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_dimen"
        android:src="@drawable/icon_loading_item"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sfddsfdsfsfd"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="17sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/info"
                android:text="123dfssdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13sp"
                android:textColor="@color/text_normal_color"
                />
            <com.zhaidou.view.TypeFaceTextView
                android:id="@+id/comments"
                android:text="123"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00001"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="@color/text_gary_color"
                />
        </LinearLayout>

        </LinearLayout>

</LinearLayout>
