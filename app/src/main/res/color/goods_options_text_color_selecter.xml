<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="@color/text_main_color"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="@color/green_color"/>

    <item android:state_focused="false" android:state_pressed="false" android:state_checked="false" android:color="@color/text_main_color"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_checked="true" android:color="@color/green_color"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="@color/text_main_color"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="@color/green_color"/>
    <!-- check states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_checked="false" android:color="@color/text_main_color"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_checked="true" android:color="@color/green_color"/>

    <item android:color="@color/text_main_color" android:state_pressed="true"></item>

</selector>